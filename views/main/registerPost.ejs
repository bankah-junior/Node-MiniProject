<!-- Contact Me -->
<div class="contact-me w-full flex justify-center items-center">
    <div class="contact-me-container w-full py-4 flex flex-col justify-center items-center">
        <h3 class="text-4xl font-bold p-2 mb-2">Fill All Fields</h3>
        <div class="content p-4 rounded-lg" style="width: 80%;">
            <form method="post" action="/register" id="form">
                <div class="field w-full h-16 mb-4">
                    <input type="text" name="surname" id="surname" placeholder="Surname..." required>
                </div>
                <div class="field w-full h-16 mb-4">
                    <input type="text" name="othername" id="othername" placeholder="Othername..." required>
                </div>
                <div class="field w-full h-16 mb-4">
                    <input type="text" name="studentID" id="studentID" placeholder="Student ID..." required>
                </div>
                <div class="field w-full h-16 mb-4">
                    <input type="email" name="email" id="email" placeholder="Email" required>
                </div>
                <div class="field w-full h-16 mb-4">
                    <input type="tel" name="phone" id="phone" placeholder="Phone..." required>
                </div>
                <button type="submit" class="w-full text-xl font-semibold">Submit Form</button>
            </form>
        </div>
    </div>
</div>
<!-- End of Contact Me -->