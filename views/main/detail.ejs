<!DOCTYPE html>
<html lang="en">
<%- include('../head.ejs') %>
<body>

    <%- include('index.ejs') %>

    <%- include('../nav.ejs') %>

    <h1 class="text-4xl font-bold pl-4">STUDENT INFORMATION</h1>

    <% if(students){ %>
    <div class="container p-8">
        <div class="surname py-4">
            <span class="text-2xl font-semibold">Surname: </span>
            <span class="text-2xl"><%= students.surname %></span>
        </div>
        <div class="othername py-4">
            <span class="text-2xl font-semibold">Othername(s): </span>
            <span class="text-2xl"><%= students.othername %></span>
        </div>
        <div class="email py-4">
            <span class="text-2xl font-semibold">Email: </span>
            <span class="text-2xl"><%= students.email %></span>
        </div>
        <div class="studentID py-4">
            <span class="text-2xl font-semibold">Student ID: </span>
            <span class="text-2xl"><%= students.studentID %></span>
        </div>
        <div class="phone py-4">
            <span class="text-2xl font-semibold">Phone: </span>
            <span class="text-2xl">+<%= students.phone %></span>
        </div>
    </div>
    <% } else{ %>
        <h1 class="text-4xl font-bold pl-4 mt-8">No student</h1>
    <% } %>

    <div class="w-full absolute bottom-0" style="z-index: -9999;">
        <%- include('../footer.ejs') %>
    </div>
</body>
</html>